<div class="row">
    <div class="col-md-12">
        <h2>Url Shortener</h2>
 </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="jumbotron">

            <div class="form-group">
                <form id="urlForm">
                    <input class="form-control display-inline input-lg" id="textlongUrl" name="textlongUrl" type="text"
                           required="required" 
                           placeholder="Paste a link to shorten it" value="">
                    <input class="btn btn-primary btn-default" id="btnShorten" name="btnShorten" type="submit" value="Shorten">
                    <div class="form-group">
                        <div id="messages"></div>
                    </div>                    
                </form>
            </div>

        </div>
    </div>
</div>

<div class="row" id="loader"></div>
<div class="row">
    <div class="col-md-12" id="result" style="display:none;">
        <div class="jumbotron">
            <div>Shortened Url:</div>
            <span id="textShortUrl" class="text-primary"></span>

        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/main.js" type="text/javascript"></script>
    <script src="~/Scripts/spin.min.js" type="text/javascript"></script>
}
